<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/metin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TÜRKİYE TEKNOLOJİ TAKIMI VAKFI"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/konus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KONUŞ" />

    <Button
        android:id="@+id/dinle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DİNLE" />

    <Button
        android:id="@+id/dur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DUR" />

    <Button
        android:id="@+id/dilDegistir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DİL DEĞİŞTİR" />

    <TextView
        android:id="@+id/dil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="DİL" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KONUŞMA TİZLİĞİ" />

    <SeekBar
        android:id="@+id/konusmaTizligi"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:progress="50" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KONUŞMA HIZI" />

    <SeekBar
        android:id="@+id/konusmaHizi"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:progress="50" />


</LinearLayout>